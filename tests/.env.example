# Application
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL=postgresql://fintech_user:fintech_password@localhost:5432/fintech_wallet

# Redis
REDIS_URL=redis://localhost:6379

# JWT Secrets (Generate strong secrets in production!)
JWT_ACCESS_SECRET=your-super-secret-access-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Security
BCRYPT_ROUNDS=12

# Fraud Detection
FRAUD_THRESHOLD_AMOUNT=10000
FRAUD_NEW_ACCOUNT_DAYS=30
FRAUD_LARGE_TRANSFER_MULTIPLIER=5

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
TRANSFER_RATE_LIMIT_WINDOW=3600000
TRANSFER_RATE_LIMIT_MAX=10

# Email (Optional - for production)
# EMAIL_SERVICE=sendgrid
# EMAIL_API_KEY=your-sendgrid-api-key
# EMAIL_FROM=noreply@yourapp.com

# Monitoring (Optional)
# SENTRY_DSN=your-sentry-dsn